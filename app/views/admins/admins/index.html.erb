<div class="container">
   <div class="form-group">
      <h1>OFFICE MANAGEMENT DASHBOARD</h1>
         <%= link_to 'New Employee +', new_admins_admin_path, class: "btn btn-primary" %>
    </div>
   <div class="form-group">
     <h2>ALL EMPLOYEE DETAILS</h2>
       <table class="table table-striped table-hover table-bordered">
  <thead>
   <tr>
    <th scope="col">First_Name</th>
    <th scope="col">Last_Name</th>
    <th scope="col">Email</th>
    <th scope="col">Phone_no</th>
    <th scope="col">Role</th>
    <th colspan="3" class="text-center">Actions</th>
   </tr>
 </thead>
 <tbody>
    <% @admins.each do |admin| %>
    <tr>
    <td><%= admin.first_name %></td>
    <td><%= admin.last_name %></td>
    <td><%= admin.email %></td>
    <td><%= admin.phone_no %></td>
    <td><%= admin.role&.name %></td>
    <td><%= link_to 'show', admins_admin_path(admin), class: "btn btn-info"%></td>
    <td><%= link_to 'Edit', edit_admins_admin_path(admin), class: "btn btn-warning"%></td>
    <td><%= button_to 'Delete', admins_admin_path(admin), method: :delete, data:{ confirm: 'are you sure' }, class: "btn btn-danger"%> </td>
    </tr>
    <% end %>
  </tbody>
    </table>
  </div>
    <%= button_to "Log out", destroy_admin_session_path, method: :delete%>
</div>
