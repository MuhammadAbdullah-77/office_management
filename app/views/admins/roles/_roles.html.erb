<div class="table-responsive">
  <table class=" table table-bordered table-hover">
    <thead>
      <tr class="color-red">
        <th>#</th>
        <th>Name</th>
        <th colspan="3" class="text-center">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @roles.each_with_index do |role, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= role.name %></td>
            <td class="text-center">
              <%= link_to edit_admins_role_path(role), class: 'btn btn-warning btn-xs','data-toggle': 'tooltip', 'data-placement':'top', title: 'Edit Role' do %>
                <i class="fab fa-pencil-square-o"></i>
              <% end %>
            </td>
            <td class="text-center">
              <%= button_to admins_role_path(role), class: 'btn btn-danger btn-xs','data-toggle': 'tooltip', 'data-placement':'top', title: 'Delete Role', method: :delete,  data: { confirm: 'Are you sure?' } do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
